<!DOCTYPE html>
<html>
<head>
  <title>Gyms - Gym Connection</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <h1>Available Gyms</h1>
    <% if (user && user.type === 'instructor') { %>
      <a href="/gyms/add" class="btn btn-primary mb-3">Add New Gym</a>
    <% } %>
    
    <div class="row">
      <% gyms.forEach(function(gym) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= gym.name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= gym.city %></h6>
              <p class="card-text"><%= gym.description %></p>
              <ul class="list-unstyled">
                <li>Capacity: <%= gym.capacity %> persons</li>
                <li>Fee: $<%= gym.fee %></li>
                <li>Hours: <%= gym.operatingHours %></li>
                <li>Amenities: <%= gym.amenities %></li>
                <li>Address: <%= gym.address %></li>
              </ul>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>